generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id    Int    @id @default(autoincrement())
  email String @unique
}

model roles {
  id    Int    @id @default(autoincrement())
  email String @db.VarChar(255)
  roles String @db.VarChar(10)
}

model Slot {
  id          Int      @id @default(autoincrement())
  date        DateTime
  time        String
  isAvailable Boolean  @default(true)
}
